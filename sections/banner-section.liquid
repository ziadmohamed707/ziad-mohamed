{% comment %}
Banner Section
- Editable fields: eyebrow, title, subtitle, cta_text, cta_url, banner_image
- Simple button animation (fade/slide) implemented with CSS
- Pixel-approx layout; edit CSS to match Figma precisely
{% endcomment %}

<section id="custom-banner-{{ section.id }}" class="custom-banner-section" aria-label="Banner section">
  <div class="banner-inner">
    <div class="banner-media" style="background-image: url({{ section.settings.banner_image | img_url: '2048x2048' }});"></div>
    <div class="banner-content">
      {% if section.settings.eyebrow != blank %}
        <div class="banner-eyebrow">{{ section.settings.eyebrow }}</div>
      {% endif %}
      <h1 class="banner-title">{{ section.settings.title }}</h1>
      <p class="banner-sub">{{ section.settings.subtitle }}</p>
      <a class="banner-cta" href="{{ section.settings.cta_url }}" target="{{ section.settings.cta_new_tab ? '_blank' : '_self' }}">
        <span class="cta-text">{{ section.settings.cta_text }}</span>
        <span class="cta-arrow" aria-hidden="true">â†’</span>
      </a>
    </div>
  </div>

  <style>
    /* Banner layout (self-contained) */
    #custom-banner-{{ section.id }} { width:100%; display:block; padding:40px 0; }
    #custom-banner-{{ section.id }} .banner-inner { max-width:1200px; margin:0 auto; display:flex; gap:28px; align-items:center; }
    .banner-media { flex:1 1 60%; background-size:cover; background-position:center; min-height:280px; border-radius:2px; box-shadow: 0 8px 30px rgba(0,0,0,.06);}
    .banner-content { flex:1 1 40%; padding:18px 10px; }
    .banner-eyebrow { color:#777; font-size:13px; margin-bottom:8px; text-transform:uppercase; letter-spacing:.08em; }
    .banner-title { font-size:40px; margin:6px 0 12px; line-height:1.05; }
    .banner-sub { color:#555; margin-bottom:18px; }
    .banner-cta { display:inline-flex; align-items:center; gap:10px; padding:12px 18px; border-radius:4px; background:#111; color:#fff; text-decoration:none; transform: translateY(6px); opacity:0; animation: bannerCtaIn .6s .25s forwards; }
    .banner-cta:hover { transform: translateY(0); box-shadow: 0 6px 20px rgba(0,0,0,.12); }
    .banner-cta .cta-arrow { font-weight:700; }
    @keyframes bannerCtaIn {
      to { transform: translateY(0); opacity:1; }
    }

    /* Responsive */
    @media (max-width: 820px) {
      #custom-banner-{{ section.id }} .banner-inner { flex-direction:column-reverse; gap:16px; padding:0 16px; }
      .banner-title { font-size:30px; text-align:left; }
      .banner-media { width:100%; min-height:200px; }
    }
  </style>

  {% schema %}
  {
    "name": "Custom Banner (Figma)",
    "settings": [
      {
        "id": "eyebrow",
        "type": "text",
        "label": "Eyebrow text",
        "default": "Discover"
      },
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "The Gift Guide"
      },
      {
        "id": "subtitle",
        "type": "textarea",
        "label": "Subtitle",
        "default": "Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
      },
      {
        "id": "cta_text",
        "type": "text",
        "label": "Button text",
        "default": "Shop Now"
      },
      {
        "id": "cta_url",
        "type": "url",
        "label": "Button link",
        "default": "/collections/all"
      },
      {
        "id": "cta_new_tab",
        "type": "checkbox",
        "label": "Open CTA in new tab",
        "default": false
      },
      {
        "id": "banner_image",
        "type": "image_picker",
        "label": "Banner image"
      }
    ],
    "presets": [
      {
        "name": "Banner (Figma)",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
</section>